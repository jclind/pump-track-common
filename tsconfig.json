{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "include": ["src/**/*", "types/**/*", "index.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
